{
  "name": "be-clevertube",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "ENV=production node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "ENV=test jest --config ./src/test/jest-e2e.json --forceExit",
    "typeorm": "node --require ts-node/register node_modules/typeorm/cli.js",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:generate": "npm run build && npm run typeorm migration:generate -- -n",
    "migration:up": "npm run build && npm run typeorm migration:run",
    "migration:down": "npm run build && npm run typeorm migration:revert"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.76.0",
    "@aws-sdk/client-transcribe": "3.76.0",
    "@aws-sdk/lib-storage": "3.76.0",
    "@aws-sdk/s3-presigned-post": "3.76.0",
    "@casl/ability": "5.4.3",
    "@nestjs/axios": "0.0.7",
    "@nestjs/common": "8.4.4",
    "@nestjs/config": "2.0.0",
    "@nestjs/core": "8.4.4",
    "@nestjs/passport": "8.2.1",
    "@nestjs/platform-express": "8.4.4",
    "@nestjs/swagger": "5.2.1",
    "@nestjs/typeorm": "8.0.4",
    "@types/uuid": "8.3.4",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "dotenv": "16.0.0",
    "duration-fns": "3.0.1",
    "firebase-admin": "10.2.0",
    "googleapis": "100.0.0",
    "nestjs-i18n": "9.1.1",
    "nestjs-typeorm-paginate": "4.0.1",
    "passport": "0.5.3",
    "passport-firebase-jwt": "1.2.1",
    "pg": "8.7.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "slug": "5.3.0",
    "sqlstring": "2.3.3",
    "swagger-ui-express": "4.3.0",
    "typeorm": "0.2.45",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "8.0.0",
    "@nestjs/schematics": "8.0.0",
    "@nestjs/testing": "8.0.0",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "16.0.0",
    "@types/slug": "5.0.3",
    "@types/sqlstring": "2.3.0",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "firebase": "9.8.3",
    "jest": "27.2.5",
    "prettier": "2.3.2",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "27.0.3",
    "ts-loader": "9.2.3",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.10.1",
    "typescript": "4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
